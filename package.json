{
  "name": "vietnamese-stt-client-generator",
  "version": "1.0.0",
  "description": "TypeScript client generator for Vietnamese STT + Toxic Detection API",
  "private": true,
  "scripts": {
    "generate-client": "npx @hey-api/openapi-ts -i http://localhost:8000/openapi.json -o frontend/src/client",
    "generate-client-local": "npx @hey-api/openapi-ts -i ./openapi.json -o frontend/src/client",
    "download-schema": "curl -o openapi.json http://localhost:8000/openapi.json",
    "preprocess-schema": "node scripts/preprocess-openapi.js",
    "build-client": "npm run download-schema && npm run preprocess-schema && npm run generate-client-local",
    "dev-client": "npm run generate-client"
  },
  "devDependencies": {
    "@hey-api/openapi-ts": "^0.54.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}